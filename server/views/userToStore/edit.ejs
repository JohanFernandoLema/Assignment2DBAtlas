<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">


            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter your Name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Number</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter your phone number"
                    name="author" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter your email address"
                    name="published" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Birth</label>
                    <input type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter your Birthday ('mm/dd/yyyy')"
                    name="description" required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Password</label>
                    <input type="password" class="form-control"
                    id="priceTextField"
                    placeholder="Enter your password"
                    name="price" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                      
                        <a href="/book-list" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete</a>
            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

